<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Immobile.
    -->
    <changeSet id="20190112094618-1" author="jhipster">
        <createTable tableName="immobile" remarks="Entity Immobile">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="agente" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="codice" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="descrizione" type="clob">
                <constraints nullable="true" />
            </column>

            <column name="indirizzo" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="cap" type="varchar(20)">
                <constraints nullable="true" />
            </column>

            <column name="regione" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="provincia" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="citta" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="note" type="clob">
                <constraints nullable="true" />
            </column>

            <column name="path_folder" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="dati_catastali" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="foglio" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="particella" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="sub" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="geolocalizzazione_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_immobile_geolocalizzazione_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
    
    <!-- Added the entity audit columns -->
    <changeSet id="20181108170542-audit-1" author="jhipster-entity-audit">
        <addColumn tableName="immobile">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </addColumn>
    </changeSet>
    
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
